# pce-sim405.cfg
#
# Example config file

sim405 {
	system {
		model = "ppc405"

		# for linux 2.6
		uic_invert = 0x7f

		# for linux 2.4 (bug in linux)
		#uic_invert = 0x7e

		# The UART input clock
		serial_clock = 115200
	}

	# Multiple "ram" sections may be present
	ram {
		# The base address
		address = 0

		# The size in bytes
		size = 256M

		# The RAM image that is used to initialize the RAM
		#file = "linux.bin"
	}

	# Multiple "rom" sections may be present
	rom {
		# The base address
		address = 0xfff80000

		# The rom size
		size = 512K

		# The file from which the rom code is loaded
		#file = "sim405.rom"
	}

	# load sections are processed after the emulator is set up.
	load {
		format = "ihex"
		file   = "sim405.ihex"
	}

	#load {
	#	format  = "binary"
	#	file    = "sim405.bin"
	#	address = 0xfff80000
	#}

	# The real time clock
	device {
		type    = "ds1743"
		address = 0xf0000000
		size    = 8192
		file    = "ds1743.bin"
	}

	# Up to two "serial" sections may be present. The first is
	# UART0, the second UART1. If the base addresses are changed,
	# linux won't find the UARTs
	serial {
		address = 0xef600300
		irq     = 0

		# Up to multichar characters are sent or received
		# without any transmission delay. For a real serial port
		# this value is 1 but larger values can speed up
		# transmission.
		multichar = 1

		# Not all character drivers are supported on
		# all platforms.
		#driver = "null"
		driver = "stdio:file=uart0.out"
		#driver = "tios:file=/dev/ttyS0"
	}

	serial {
		address = 0xef600400
		irq     = 1

		multichar = 1

		driver = "stdio:file=uart1.out"
	}

	sercons {
		serial = 0
	}

	#slip {
	#	serial    = 1
	#	interface = "tun0"
	#}

	disk {
		drive    = 128
		type     = "auto"
		file     = "hda.pimg"
		file     = "hda.qed"
		readonly = 0
		optional = 1
	}

	disk {
		drive    = 129
		type     = "auto"
		file     = "hdb.pimg"
		file     = "hdb.qed"
		readonly = 0
		optional = 1
	}

	pci_ata {
		pci_device = 4
		pci_irq = 31

		channel {
			device {
				device          = 0
				disk            = 128
				multi_count_max = 16
				model           = "PCEDISK"
			}

			device {
				device          = 1
				disk            = 129
				multi_count_max = 16
				model           = "PCEDISK"
			}
		}
	}
}
