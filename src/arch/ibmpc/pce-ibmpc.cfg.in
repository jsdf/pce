# The first harddisk
disk {
	drive    = 128
	type     = "auto"
	file     = "drv_80.img"
#	cow      = "drv_80.cow"
	readonly = 0
	optional = 1
}

# The first harddisk (alternate)
disk {
	drive    = 128
	type     = "auto"
	file     = "hd0.img"
	file     = "hd0.qed"
#	cow      = "hd0.cow"
	readonly = 0
	optional = 1
}

# The second harddisk
disk {
	drive    = 129
	type     = "auto"
	file     = "hd1.img"
	file     = "hd1.qed"
	file     = "drv_81.img"
#	cow      = "hd1.cow"
	readonly = 0
	optional = 1
}
